<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App05_ControleXF.Controles.DatePickerPage">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker
                TextColor="Red"
                Format="dd/MM/yyyy"
                MinimumDate="01/01/2019"
                MaximumDate="01/01/2020"
                Date="10/01/2019"
                
                DateSelected="DatePicker_DateSelected"
                />

            <Label x:Name="lblData"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>